<Window x:Class="WpfApp5.EditMessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Message" Height="200" Width="300">
    <Grid>
        <TextBox x:Name="userNameTextBox" IsReadOnly="True" Margin="10"/>
        <TextBox x:Name="messageTextBox" TextWrapping="Wrap" AcceptsReturn="True" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,133,0,0">
            <Button Click="SaveButton_Click" Margin="5">
                <Image Source="/WpfApp5;component/imageroject/free-icon-check-mark-4225683.png" Width="16" Height="16" />
            </Button>
            <Button Click="CancelButton_Click" Margin="5">
                <Image Source="/WpfApp5;component/imageroject/free-icon-cancel-753345.png" Width="16" Height="16" />
            </Button>
        </StackPanel>
    </Grid>
</Window>